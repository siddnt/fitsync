<%- include('../partials/header') %>

<main>
  <div class="container my-5">
    <h1 class="mb-4">Member Management</h1>
    
    <% if (typeof message !== 'undefined' && message) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    
    <div class="card">
      <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><i class="fas fa-users me-2"></i>All Members</h3>
        <a href="/admin/dashboard" class="btn btn-outline-light">
          <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
      </div>
      <div class="card-body">
        <!-- Filter/Search -->
        <div class="row mb-4">
          <div class="col-md-6">
            <div class="input-group">
              <input type="text" id="userSearch" class="form-control" placeholder="Search by name or email">
              <button class="btn btn-outline-secondary" type="button">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
          <div class="col-md-6">
            <select id="activityFilter" class="form-select">
              <option value="all">All Members</option>
              <option value="active">Active Plans</option>
              <option value="no-plan">No Active Plans</option>
            </select>
          </div>
        </div>
        
        <!-- Users Table -->
        <div class="table-responsive">
          <table class="table table-dark table-hover align-middle">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Age</th>
                <th scope="col">Gender</th>
                <th scope="col">Registration Date</th>
                <th scope="col">Courses Enrolled</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (users && users.length > 0) { %>
                <% users.forEach(user => { %>
                  <tr class="user-row" data-has-plan="<%= user.enrolledCourses && user.enrolledCourses.length ? 'active' : 'no-plan' %>">
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.age || 'N/A' %></td>
                    <td><%= user.gender || 'N/A' %></td>
                    <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                    <td>
                      <% if (user.enrolledCourses && user.enrolledCourses.length) { %>
                        <% user.enrolledCourses.forEach(enrollment => { %>
                          <div class="mb-1">
                            <span class="badge bg-success"><%= enrollment.course.name || 'Course' %></span>
                          </div>
                        <% }); %>
                      <% } else { %>
                        <span class="badge bg-secondary">No Courses</span>
                      <% } %>
                    </td>
                    <td>
                      <a href="/admin/users/delete/<%= user._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                        <i class="fas fa-trash me-1"></i>Delete
                      </a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="7" class="text-center">No users found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  <!-- User Details Modal -->
  <div class="modal fade" id="userDetailsModal" tabindex="-1" aria-labelledby="userDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content bg-dark text-light">
        <div class="modal-header">
          <h5 class="modal-title" id="userDetailsModalLabel">User Details</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="userDetailsContent">
          <div class="text-center">
            <div class="spinner-border text-danger" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading user details...</p>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  // Search functionality
  document.getElementById('userSearch').addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase();
    const rows = document.querySelectorAll('.user-row');
    
    rows.forEach(row => {
      const name = row.cells[0].textContent.toLowerCase();
      const email = row.cells[1].textContent.toLowerCase();
      
      if (name.includes(searchTerm) || email.includes(searchTerm)) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    });
  });
  
  // Filter by plan status
  document.getElementById('activityFilter').addEventListener('change', function() {
    const filterValue = this.value;
    const rows = document.querySelectorAll('.user-row');
    
    rows.forEach(row => {
      const hasPlan = row.getAttribute('data-has-plan');
      
      if (filterValue === 'all' || hasPlan === filterValue) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    });
  });
  
  // User details modal functionality
  document.querySelectorAll('.view-user-details').forEach(button => {
    button.addEventListener('click', async function() {
      const userId = this.getAttribute('data-id');
      const modalBody = document.getElementById('userDetailsContent');
      
      // Show loading indicator
      modalBody.innerHTML = `
        <div class="text-center">
          <div class="spinner-border text-danger" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p>Loading user details...</p>
        </div>
      `;
      
      // Show the modal
      const modal = new bootstrap.Modal(document.getElementById('userDetailsModal'));
      modal.show();
      
      try {
        // In a real app, this would be an AJAX call to get user details
        // For now, we'll just simulate this with data we already have
        const row = this.closest('tr');
        const name = row.cells[0].textContent;
        const email = row.cells[1].textContent;
        const age = row.cells[2].textContent;
        const gender = row.cells[3].textContent;
        const registeredDate = row.cells[4].textContent;
        
        // Update modal with user details
        setTimeout(() => {
          modalBody.innerHTML = `
            <div class="row">
              <div class="col-md-6">
                <h4>Personal Information</h4>
                <p><strong>Name:</strong> ${name}</p>
                <p><strong>Email:</strong> ${email}</p>
                <p><strong>Age:</strong> ${age}</p>
                <p><strong>Gender:</strong> ${gender}</p>
                <p><strong>Registered:</strong> ${registeredDate}</p>
              </div>
              <div class="col-md-6">
                <h4>Fitness Plans</h4>
                <p>User's active fitness plans would be displayed here.</p>
                <h4 class="mt-3">Recent Activity</h4>
                <p>User's recent activity would be displayed here.</p>
              </div>
            </div>
          `;
        }, 500);
        
      } catch (error) {
        modalBody.innerHTML = `
          <div class="alert alert-danger">
            Error loading user details. Please try again.
          </div>
        `;
      }
    });
  });
</script>

<script src="/js/admin.js"></script>
<%- include('../partials/footer') %>