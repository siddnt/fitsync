<%- include('../partials/header') %>

<main>
  <div class="container my-5">
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <div class="card">
          <div class="card-header bg-danger text-white">
            <h2 class="mb-0"><i class="fas fa-calendar-check me-2"></i>My Bookings</h2>
          </div>
          <div class="card-body">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" id="bookingTabs" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" id="pending-tab" data-bs-toggle="tab" href="#pending" role="tab">
                  <i class="fas fa-hourglass-half me-1"></i>Pending
                  <% if (pendingBookings && pendingBookings.length > 0) { %>
                    <span class="badge bg-secondary ms-1"><%= pendingBookings.length %></span>
                  <% } %>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="upcoming-tab" data-bs-toggle="tab" href="#upcoming" role="tab">
                  <i class="fas fa-calendar me-1"></i>Upcoming
                  <% if (upcomingBookings && upcomingBookings.length > 0) { %>
                    <span class="badge bg-secondary ms-1"><%= upcomingBookings.length %></span>
                  <% } %>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="past-tab" data-bs-toggle="tab" href="#past" role="tab">
                  <i class="fas fa-history me-1"></i>Past
                  <% if (pastBookings && pastBookings.length > 0) { %>
                    <span class="badge bg-secondary ms-1"><%= pastBookings.length %></span>
                  <% } %>
                </a>
              </li>
            </ul>

            <!-- Tab content -->
            <div class="tab-content mt-4">
              <!-- Pending Bookings -->
              <div class="tab-pane fade show active" id="pending" role="tabpanel">
                <% if (pendingBookings && pendingBookings.length > 0) { %>
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead class="table-light">
                        <tr>
                          <th>Client</th>
                          <th>Plan</th>
                          <th>Date & Time</th>
                          <th>Status</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% pendingBookings.forEach(booking => { %>
                          <tr>
                            <td>
                              <div class="d-flex align-items-center">
                                <% if (booking.user.profilePicture) { %>
                                  <img src="<%= booking.user.profilePicture %>" class="rounded-circle me-2" width="40" height="40">
                                <% } else { %>
                                  <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                    <i class="fas fa-user text-white"></i>
                                  </div>
                                <% } %>
                                <div><%= booking.user.name %></div>
                              </div>
                            </td>
                            <td><%= booking.planTitle %></td>
                            <td>
                              <%= new Date(booking.startTime).toLocaleDateString() %><br>
                              <small class="text-muted"><%= new Date(booking.startTime).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></small>
                            </td>
                            <td><span class="badge bg-warning">Pending</span></td>
                            <td>
                              <div class="btn-group">
                                <a href="/bookings/<%= booking._id %>" class="btn btn-sm btn-outline-primary">
                                  <i class="fas fa-eye"></i>
                                </a>
                                <a href="/trainer/bookings/confirm/<%= booking._id %>" class="btn btn-sm btn-success">
                                  <i class="fas fa-check"></i>
                                </a>
                                <a href="/trainer/bookings/cancel/<%= booking._id %>" class="btn btn-sm btn-danger">
                                  <i class="fas fa-times"></i>
                                </a>
                              </div>
                            </td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                <% } else { %>
                  <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>No pending bookings.
                  </div>
                <% } %>
              </div>

              <!-- Upcoming Bookings -->
              <div class="tab-pane fade" id="upcoming" role="tabpanel">
                <% if (upcomingBookings && upcomingBookings.length > 0) { %>
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead class="table-light">
                        <tr>
                          <th>Client</th>
                          <th>Plan</th>
                          <th>Date & Time</th>
                          <th>Status</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% upcomingBookings.forEach(booking => { %>
                          <tr>
                            <td>
                              <div class="d-flex align-items-center">
                                <% if (booking.user.profilePicture) { %>
                                  <img src="<%= booking.user.profilePicture %>" class="rounded-circle me-2" width="40" height="40">
                                <% } else { %>
                                  <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                    <i class="fas fa-user text-white"></i>
                                  </div>
                                <% } %>
                                <div><%= booking.user.name %></div>
                              </div>
                            </td>
                            <td><%= booking.planTitle %></td>
                            <td>
                              <%= new Date(booking.startTime).toLocaleDateString() %><br>
                              <small class="text-muted"><%= new Date(booking.startTime).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></small>
                            </td>
                            <td><span class="badge bg-success">Confirmed</span></td>
                            <td>
                              <div class="btn-group">
                                <a href="/bookings/<%= booking._id %>" class="btn btn-sm btn-outline-primary">
                                  <i class="fas fa-eye"></i>
                                </a>
                                <a href="/trainer/bookings/complete/<%= booking._id %>" class="btn btn-sm btn-outline-success">
                                  <i class="fas fa-check-double"></i>
                                </a>
                              </div>
                            </td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                <% } else { %>
                  <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>No upcoming bookings.
                  </div>
                <% } %>
              </div>

              <!-- Past Bookings -->
              <div class="tab-pane fade" id="past" role="tabpanel">
                <% if (pastBookings && pastBookings.length > 0) { %>
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead class="table-light">
                        <tr>
                          <th>Client</th>
                          <th>Plan</th>
                          <th>Date & Time</th>
                          <th>Status</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% pastBookings.forEach(booking => { %>
                          <tr>
                            <td>
                              <div class="d-flex align-items-center">
                                <% if (booking.user.profilePicture) { %>
                                  <img src="<%= booking.user.profilePicture %>" class="rounded-circle me-2" width="40" height="40">
                                <% } else { %>
                                  <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                    <i class="fas fa-user text-white"></i>
                                  </div>
                                <% } %>
                                <div><%= booking.user.name %></div>
                              </div>
                            </td>
                            <td><%= booking.planTitle %></td>
                            <td>
                              <%= new Date(booking.startTime).toLocaleDateString() %><br>
                              <small class="text-muted"><%= new Date(booking.startTime).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></small>
                            </td>
                            <td>
                              <% if (booking.status === 'cancelled') { %>
                                <span class="badge bg-danger">Cancelled</span>
                              <% } else if (booking.status === 'completed') { %>
                                <span class="badge bg-secondary">Completed</span>
                              <% } %>
                            </td>
                            <td>
                              <a href="/bookings/<%= booking._id %>" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i>
                              </a>
                            </td>
                          </tr>
                        <% }); %>
                      </tbody>
                    </table>
                  </div>
                <% } else { %>
                  <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>No past bookings.
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Handle tab navigation
    const triggerTabList = [].slice.call(document.querySelectorAll('#bookingTabs a'));
    triggerTabList.forEach(function(triggerEl) {
      const tabTrigger = new bootstrap.Tab(triggerEl);
      triggerEl.addEventListener('click', function(event) {
        event.preventDefault();
        tabTrigger.show();
      });
    });
  });
</script>

<%- include('../partials/footer') %> 