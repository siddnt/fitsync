<%- include('../partials/header') %>

<main>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header bg-danger text-white">
            <h2><i class="fas fa-exclamation-triangle me-2"></i>Error <%= statusCode || "500" %></h2>
          </div>
          <div class="card-body">
            <h3 class="text-danger">Something went wrong!</h3>
            
            <p class="lead"><%= message || "The requested resource could not be found." %></p>
            
            <div class="mt-4 d-flex gap-2">
              <a href="/" class="btn btn-primary">
                <i class="fas fa-home me-2"></i>Return to Home
              </a>
              <button onclick="history.back()" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Go Back
              </button>
            </div>
            
            <% if (process.env.NODE_ENV === 'development' && locals.stack) { %>
              <div class="mt-4">
                <h4>Developer Information</h4>
                <pre class="bg-dark text-light p-3 rounded"><%= stack %></pre>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>