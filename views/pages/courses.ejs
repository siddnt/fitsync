// Function to load reviews for each course
function loadCourseReviews(courseId, displayId) {
  // Find the container for this course's reviews
  const reviewsContainer = document.getElementById(`reviews-${displayId || courseId}`);
  if (!reviewsContainer) {
    console.error(`Reviews container not found for display ID: ${displayId || courseId}`);
    return;
  }
  
  // Show loading state
  reviewsContainer.innerHTML = `
    <div class="text-center py-3">
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading reviews...</span>
      </div>
    </div>
  `;
  
  // Verify we have a valid MongoDB ObjectId (24-character hex string)
  if (!/^[0-9a-fA-F]{24}$/.test(courseId)) {
    console.error(`Invalid course ID format: ${courseId}, not making request`);
    reviewsContainer.innerHTML = '<div class="alert alert-light">No reviews yet for this course. Enroll to be the first to review!</div>';
    return;
  }
  
  console.log(`Making request for reviews with course ID: ${courseId}`);
  
  // Append cache-busting parameter to avoid cached responses
  fetch(`/reviews/course/${courseId}/top?limit=5&_=${Date.now()}`)
    .then(response => {
      if (!response.ok) {
        throw new Error(`HTTP error! Status: ${response.status}`);
      }
      return response.json();
    })
    .then(data => {
      console.log(`Reviews data for ${courseId}:`, data);
      reviewsContainer.innerHTML = '';
      
      if (data.data && data.data.length > 0) {
        const reviews = data.data;
        
        reviews.forEach(review => {
          const reviewDate = new Date(review.createdAt).toLocaleDateString();
          const stars = '★'.repeat(review.rating) + '☆'.repeat(5 - review.rating);
          const userName = review.user && review.user.name ? review.user.name : 'Anonymous User';
          
          const reviewElement = document.createElement('div');
          reviewElement.className = 'review-item mb-3 p-3 border rounded';
          reviewElement.innerHTML = `
            <div class="d-flex justify-content-between align-items-start">
              <div>
                <h5 class="mb-1">${userName}</h5>
                <div class="text-warning mb-2">
                  ${stars}
                </div>
              </div>
              <small class="text-muted">${reviewDate}</small>
            </div>
            <p class="mb-0">${review.comment}</p>
          `;
          reviewsContainer.appendChild(reviewElement);
        });
      } else {
        reviewsContainer.innerHTML = '<div class="alert alert-light">No reviews yet for this course. Enroll to be the first to review!</div>';
      }
    })
    .catch(error => {
      console.error(`Error fetching reviews for course ${courseId}:`, error);
      reviewsContainer.innerHTML = '<div class="alert alert-light">Unable to load reviews at this time. Please try again later.</div>';
    });
}
