<%- include('../partials/header') %>

<main>
  <div class="container my-5">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="card">
          <div class="card-header bg-danger text-white">
            <h2 class="mb-0"><i class="fas fa-calendar-check me-2" ></i>Booking Details</h2>
          </div>
          <div class="card-body">
            <% if (booking) { %>
              <div class="booking-info p-4 rounded mb-4" style="background-color: #2a2a2a;">
                <div class="row">
                  <div class="col-md-7">
                    <h4><%= plan ? plan.title : booking.planTitle %></h4>
                    <p class="mb-4"><%= plan ? plan.description : "No description available" %></p>
                    
                    <div class="booking-meta mb-3">
                      <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-calendar-alt text-danger me-2"></i>
                        <span><strong>Date:</strong> <%= new Date(booking.startTime).toLocaleDateString() %></span>
                      </div>
                      <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-clock text-danger me-2"></i>
                        <span><strong>Time:</strong> <%= new Date(booking.startTime).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
                      </div>
                      <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-tag text-danger me-2"></i>
                        <span><strong>Status:</strong> 
                          <span class="badge <%= booking.status === 'confirmed' ? 'bg-success' : booking.status === 'pending' ? 'bg-warning text-dark' : booking.status === 'cancelled' ? 'bg-danger' : 'bg-secondary' %>">
                            <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                          </span>
                        </span>
                      </div>
                    </div>
                  </div>
                  
                  <div class="col-md-5">
                    <div class="card bg-dark">
                      <div class="card-header">
                        <h5 class="mb-0"><%= userRole === 'user' ? 'Your Trainer' : 'Student' %></h5>
                      </div>
                      <div class="card-body">
                        <div class="d-flex align-items-center">
                          <div class="avatar me-3">
                            <% if (userRole === 'user' && booking.trainer.profilePicture) { %>
                              <img src="<%= booking.trainer.profilePicture %>" alt="Trainer" class="rounded-circle" width="60" height="60">
                            <% } else if (userRole !== 'user' && booking.user.profilePicture) { %>
                              <img src="<%= booking.user.profilePicture %>" alt="User" class="rounded-circle" width="60" height="60">
                            <% } else { %>
                              <div class="avatar-placeholder rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                <i class="fas fa-user text-light" style="font-size: 1.5rem;"></i>
                              </div>
                            <% } %>
                          </div>
                          <div>
                            <h6 class="mb-0"><%= userRole === 'user' ? booking.trainer.name : booking.user.name %></h6>
                            <p class="text-muted mb-0"><%= userRole === 'user' ? (booking.trainer.specializations ? booking.trainer.specializations.join(', ') : 'Trainer') : 'Student' %></p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              
              <% if (booking.notes) { %>
              <div class="mb-4">
                <h5><i class="fas fa-sticky-note me-2"></i>Session Notes</h5>
                <div class="p-3 rounded" style="background-color: #2a2a2a;">
                  <%= booking.notes %>
                </div>
              </div>
              <% } %>
              
              <div class="d-flex justify-content-between mt-4">
                <% if (userRole === 'user' && booking.status !== 'cancelled' && booking.status !== 'completed') { %>
                  <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#cancelModal">
                    <i class="fas fa-times-circle me-2"></i>Cancel Booking
                  </button>
                <% } else if (userRole === 'trainer' && booking.status === 'pending') { %>
                  <div>
                    <a href="/trainer/bookings/confirm/<%= booking._id %>" class="btn btn-success me-2">
                      <i class="fas fa-check me-2"></i>Confirm
                    </a>
                    <a href="/trainer/bookings/cancel/<%= booking._id %>" class="btn btn-outline-danger">
                      <i class="fas fa-times me-2"></i>Decline
                    </a>
                  </div>
                <% } else if (userRole === 'trainer' && booking.status === 'confirmed') { %>
                  <a href="/trainer/bookings/complete/<%= booking._id %>" class="btn btn-success">
                    <i class="fas fa-check-double me-2"></i>Mark as Completed
                  </a>
                <% } %>
                
                <% if (userRole === 'user') { %>
                  <a href="/user/bookings" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to My Bookings
                  </a>
                <% } else { %>
                  <a href="/trainer/bookings" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Bookings
                  </a>
                <% } %>
              </div>
              
              <!-- Cancel Modal -->
              <% if (userRole === 'user' && booking.status !== 'cancelled' && booking.status !== 'completed') { %>
                <div class="modal fade" id="cancelModal" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content bg-dark text-light">
                      <div class="modal-header">
                        <h5 class="modal-title"><i class="fas fa-exclamation-triangle text-warning me-2"></i>Cancel Booking</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <form action="/bookings/<%= booking._id %>" method="POST">
                        <div class="modal-body">
                          <p>Are you sure you want to cancel this booking?</p>
                          <input type="hidden" name="status" value="cancelled">
                          
                          <div class="mb-3">
                            <label for="cancellationReason" class="form-label">Reason for cancellation</label>
                            <textarea class="form-control" id="cancellationReason" name="cancellationReason" rows="3" required></textarea>
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                          <button type="submit" class="btn btn-danger">Yes, Cancel Booking</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              <% } %>
            <% } else { %>
              <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle me-2"></i>
                Booking not found
              </div>
              <a href="javascript:history.back()" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Go Back
              </a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %> 