<%- include('../partials/header') %>

<style>
:root {
    --main-accent: #3498db; /* Website's main blue accent */
    --black: #111;
    --red: #e74c3c;
    --white: #fff;
}
body {
    background: var(--black);
    min-height: 100vh;
}
.wishlist-container {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 2rem;
    background: var(--white);
    border-radius: 18px;
    box-shadow: 0 8px 32px 0 rgba(0,0,0,0.15);
    border: 2px solid var(--main-accent);
}
.wishlist-header {
    padding: 2rem 1rem 1rem 1rem;
    border-bottom: 2px solid var(--red);
    margin-bottom: 2rem;
    background: var(--main-accent);
    border-radius: 14px 14px 0 0;
    text-align: center;
}
.wishlist-header h1 {
    color: var(--white);
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: 1px;
}
.wishlist-stats {
    display: flex;
    gap: 2rem;
    color: var(--white);
    font-size: 1.1rem;
    justify-content: center;
    margin-top: 0.5rem;
}
.wishlist-count i, .wishlist-total i {
    color: var(--red);
}
.wishlist-item {
    display: flex;
    padding: 2rem 1.5rem;
    border-bottom: 2px solid var(--main-accent);
    position: relative;
    background: var(--white);
    border-radius: 14px;
    margin-bottom: 2rem;
    box-shadow: 0 4px 16px 0 rgba(0,0,0,0.10);
    transition: transform 0.2s, box-shadow 0.2s, border 0.2s;
    border: 2px solid var(--main-accent);
}
.wishlist-item:hover {
    transform: translateY(-6px) scale(1.02);
    box-shadow: 0 8px 32px 0 rgba(0,0,0,0.18);
    border: 2px solid var(--red);
}
.product-image-container {
    width: 180px;
    height: 180px;
    margin-right: 2rem;
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.10);
    background: var(--white);
    border: 2px solid var(--main-accent);
}
.product-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    border-radius: 12px;
    background: var(--white);
}
.product-details {
    flex: 1;
    display: flex;
    flex-direction: column;
}
.product-name {
    color: var(--main-accent);
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    text-decoration: none;
    letter-spacing: 0.5px;
    transition: color 0.2s;
}
.product-name:hover {
    color: var(--red);
    text-decoration: underline;
}
.product-price {
    color: var(--red);
    font-size: 1.3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}
.product-description {
    color: #222;
    font-size: 1rem;
    margin-bottom: 1rem;
    line-height: 1.5;
}
.quantity-section {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
}
.quantity-label {
    color: var(--main-accent);
    font-size: 1.1rem;
    font-weight: 600;
}
.quantity-controls {
    display: flex;
    align-items: center;
    border: 2px solid var(--main-accent);
    border-radius: 8px;
    overflow: hidden;
    background: var(--white);
}
.quantity-btn {
    width: 36px;
    height: 36px;
    background: var(--main-accent);
    border: none;
    color: var(--white);
    font-size: 1.2rem;
    font-weight: bold;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s;
}
.quantity-btn:hover {
    background: var(--red);
}
.quantity-input {
    width: 50px;
    height: 36px;
    border: none;
    text-align: center;
    font-size: 1.1rem;
    background: var(--white);
    color: var(--main-accent);
    font-weight: 600;
}
.quantity-input:focus {
    outline: 2px solid var(--main-accent);
}
.total-price {
    color: var(--red);
    font-size: 1.1rem;
    font-weight: 600;
    margin-left: auto;
}
.action-buttons {
    display: flex;
    gap: 1rem;
    margin-top: auto;
}
.btn-remove {
    background: var(--red);
    border: none;
    color: var(--white);
    font-weight: 600;
    padding: 0.7rem 1.5rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.10);
    transition: background 0.2s, box-shadow 0.2s;
}
.btn-remove:hover {
    background: var(--main-accent);
    color: var(--white);
    box-shadow: 0 4px 16px 0 rgba(0,0,0,0.18);
    border: 1px solid var(--red);
}
.product-meta {
    display: flex;
    gap: 2rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--main-accent);
}
.meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--main-accent);
    font-size: 1rem;
}
.stock-badge {
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
    font-size: 0.95rem;
    font-weight: 600;
}
.stock-available {
    background: var(--white);
    color: var(--main-accent);
    border: 1px solid var(--main-accent);
}
.stock-low {
    background: var(--white);
    color: var(--red);
    border: 1px solid var(--red);
}
.stock-out {
    background: var(--red);
    color: var(--white);
}
.empty-wishlist {
    text-align: center;
    padding: 3rem;
    background: var(--main-accent);
    border-radius: 14px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.10);
    margin: 2rem auto;
    max-width: 500px;
}
.empty-wishlist i {
    font-size: 4rem;
    color: var(--red);
    margin-bottom: 1.5rem;
}
.empty-wishlist h3 {
    color: var(--white);
    margin-bottom: 1rem;
    font-size: 1.5rem;
}
.empty-wishlist p {
    color: var(--white);
    margin-bottom: 1.5rem;
}
.btn-shop {
    background: var(--main-accent);
    color: var(--white);
    padding: 0.75rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    font-size: 1.1rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.10);
    transition: background 0.2s, box-shadow 0.2s;
}
.btn-shop:hover {
    background: var(--red);
    color: var(--white);
    box-shadow: 0 4px 16px 0 rgba(0,0,0,0.18);
    border: 1px solid var(--main-accent);
}
@media (max-width: 900px) {
    .wishlist-container {
        padding: 1rem;
    }
    .wishlist-item {
        flex-direction: column;
        padding: 1.5rem 1rem;
    }
    .product-image-container {
        width: 100%;
        height: 200px;
        margin-right: 0;
        margin-bottom: 1rem;
    }
    .action-buttons {
        flex-direction: column;
    }
    .btn-remove {
        width: 100%;
        justify-content: center;
    }
}
</style>

<div class="wishlist-container">
    <div class="wishlist-header">
        <h1>Your Wishlist</h1>
        <% if (wishlist && wishlist.items) { %>
            <div class="wishlist-stats">
                <span class="wishlist-count">
                    <i class="fas fa-heart"></i>
                    <%= wishlist.items.length %> items
                </span>
                <span class="wishlist-total">
                    <i class="fas fa-shopping-cart"></i>
                    <%= wishlist.items.reduce((sum, item) => sum + (item.quantity || 1), 0) %> total quantity
                </span>
            </div>
        <% } %>
    </div>

    <% if (wishlist && wishlist.items && wishlist.items.length > 0) { %>
        <% wishlist.items.forEach(item => { %>
            <% const qty = item.quantity || 1; %>
            <div class="wishlist-item">
                <div class="product-image-container">
                    <img src="<%= item.product.image %>" 
                         alt="<%= item.product.name %>" 
                         class="product-image">
                </div>
                
                <div class="product-details">
                    <a href="/shop/product/<%= item.product._id %>" class="product-name">
                        <%= item.product.name %>
                    </a>
                    <div class="product-price">$<%= (item.product.price / 100).toFixed(2) %></div>
                    <p class="product-description"><%= item.product.description %></p>
                    
                    <div class="quantity-section">
                        <span class="quantity-label">Quantity:</span>
                        <div class="quantity-controls">
                            <button class="quantity-btn" onclick="changeQuantity('<%= item.product._id %>', -1, '<%= qty %>')">-</button>
                            <input type="number" 
                                   class="quantity-input" 
                                   value="<%= qty %>" 
                                   min="1" 
                                   max="<%= item.product.stock %>"
                                   onchange="updateQuantityInput('<%= item.product._id %>', this.value)">
                            <button class="quantity-btn" onclick="changeQuantity('<%= item.product._id %>', 1, '<%= qty %>')">+</button>
                        </div>
                        <div class="total-price">
                            Total: $<%= ((item.product.price * (item.quantity || 1)) / 100).toFixed(2) %>
                        </div>
                    </div>
                    
                    <div class="product-meta">
                        <div class="meta-item">
                            <i class="fas fa-calendar"></i>
                            <span>Added: <%= new Date(item.addedAt).toLocaleDateString() %></span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-box"></i>
                            <span><%= item.product.category %></span>
                        </div>
                        <div class="meta-item">
                            <i class="fas fa-cubes"></i>
                            <span class="stock-badge <%= item.product.stock > 10 ? 'stock-available' : (item.product.stock > 0 ? 'stock-low' : 'stock-out') %>">
                                <%= item.product.stock > 0 ? `${item.product.stock} in stock` : 'Out of stock' %>
                            </span>
                        </div>
                    </div>
                    
                    <div class="action-buttons">
                        <button class="btn btn-remove" onclick="removeFromWishlist('<%= item.product._id %>')">
                            <i class="fas fa-trash"></i>
                            Remove
                        </button>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div class="empty-wishlist">
            <i class="fas fa-heart"></i>
            <h3>Your wishlist is empty</h3>
            <p>Add some items to your wishlist to see them here.</p>
            <a href="/shop" class="btn-shop">
                <i class="fas fa-shopping-bag"></i>
                Continue Shopping
            </a>
        </div>
    <% } %>
</div>

<script>
// Update wishlist count in header
function updateWishlistCount() {
    const wishlistCount = document.querySelector('.wishlist-count');
    if (wishlistCount) {
        const currentCount = parseInt(wishlistCount.textContent.match(/\d+/)[0]);
        wishlistCount.innerHTML = `<i class="fas fa-heart"></i> ${currentCount - 1} items`;
    }
}

// Update removeFromWishlist function
async function removeFromWishlist(productId) {
    if (!confirm('Are you sure you want to remove this item from your wishlist?')) {
        return;
    }

    try {
        const response = await fetch(`/api/shop/wishlist/${productId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        
        if (response.ok) {
            updateWishlistCount();
            alert('Item removed from wishlist');
            window.location.reload();
        } else {
            const data = await response.json();
            alert(data.message || 'Failed to remove item from wishlist');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Failed to remove item from wishlist');
    }
}

// Update quantity input function
async function updateQuantityInput(productId, newQuantity) {
    const quantity = parseInt(newQuantity);
    if (isNaN(quantity) || quantity < 1) {
        alert('Please enter a valid quantity');
        return;
    }

    try {
        const response = await fetch(`/api/shop/wishlist/${productId}/quantity`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ 
                action: 'set',
                quantity: quantity
            })
        });
        
        if (response.ok) {
            window.location.reload();
        } else {
            const data = await response.json();
            alert(data.message || 'Failed to update quantity');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Failed to update quantity');
    }
}

// Update quantity function
async function changeQuantity(productId, delta, currentQuantity) {
    currentQuantity = parseInt(currentQuantity, 10);
    const newQuantity = currentQuantity + delta;
    if (newQuantity < 1) {
        // Remove from wishlist if quantity goes to zero
        await removeFromWishlist(productId);
        return;
    }
    try {
        const response = await fetch(`/api/shop/wishlist/${productId}/quantity`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ 
                action: 'set',
                quantity: newQuantity
            })
        });
        if (response.ok) {
            window.location.reload();
        } else {
            const data = await response.json();
            alert(data.message || 'Failed to update quantity');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Failed to update quantity');
    }
}

// Buy now function
async function buyNow(productId, quantity) {
    try {
        const response = await fetch('/api/shop/orders', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ 
                productId: productId,
                quantity: quantity || 1
            })
        });
        
        const data = await response.json();
        
        if (response.ok) {
            window.location.href = '/orders';
        } else {
            alert(data.message || 'Failed to process purchase');
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Failed to process purchase');
    }
}
</script>

