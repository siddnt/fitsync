<%- include('../partials/header') %>

<main>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header bg-success text-white text-center py-3">
            <h2><i class="fas fa-check-circle me-2"></i>Booking Confirmed!</h2>
          </div>
          <div class="card-body p-4">
            <div class="text-center mb-4">
              <div class="confirmation-icon">
                <i class="fas fa-calendar-check fa-4x text-success"></i>
              </div>
              <p class="lead mt-3">Your session has been successfully scheduled.</p>
            </div>
            
            <div class="booking-details p-4 rounded bg-dark">
              <h4 class="mb-4 text-center">Booking Details</h4>
              
              <div class="row mb-3">
                <div class="col-md-6">
                  <p><strong><i class="fas fa-dumbbell me-2"></i>Program:</strong><br>
                  <%= booking.planTitle %></p>
                </div>
                <div class="col-md-6">
                  <p><strong><i class="fas fa-user-tie me-2"></i>Trainer:</strong><br>
                  <%= booking.trainerName %></p>
                </div>
              </div>
              
              <div class="row mb-3">
                <div class="col-md-6">
                  <p><strong><i class="fas fa-calendar-alt me-2"></i>Date:</strong><br>
                  <%= new Date(booking.date).toLocaleDateString('en-US', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  }) %></p>
                </div>
                <div class="col-md-6">
                  <p><strong><i class="fas fa-clock me-2"></i>Time:</strong><br>
                  <%= booking.time %></p>
                </div>
              </div>
              
              <% if (plan && plan.location) { %>
              <div class="mb-3">
                <p><strong><i class="fas fa-map-marker-alt me-2"></i>Location:</strong><br>
                <%= plan.location %></p>
              </div>
              <% } else { %>
              <div class="mb-3">
                <p><strong><i class="fas fa-map-marker-alt me-2"></i>Location:</strong><br>
                Main Gym Facility</p>
              </div>
              <% } %>
              
              <div class="alert alert-warning">
                <i class="fas fa-info-circle me-2"></i>Please arrive 10 minutes before your scheduled time.
              </div>
            </div>
            
            <div class="text-center mt-4">
              <h5>What's Next?</h5>
              <p>Your trainer will prepare for your session. You can view all your bookings in your dashboard.</p>
            </div>
            
            <div class="d-grid gap-2 mt-4">
              <a href="/user/dashboard" class="btn btn-danger btn-lg">
                <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
              </a>
              <a href="/user/courses" class="btn btn-outline-light btn-lg">
                <i class="fas fa-search me-2"></i>Browse More Courses
              </a>
            </div>
          </div>
          <div class="card-footer bg-dark text-center py-3">
            <p class="mb-0">Need to make changes? Contact us at <a href="mailto:support@fitsync.com" class="text-danger">support@fitsync.com</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>