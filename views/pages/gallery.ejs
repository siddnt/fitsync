<link rel="stylesheet" href="/css/gallery.css">


<%- include('../partials/header') %>

<main>
  <section class="py-5">
    <div class="container">
      <h1 class="text-center text-danger mb-4">FitSync Gallery</h1>
      
      <% if (locals.flashMessage && locals.flashType === 'success') { %>
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
          <i class="fas fa-check-circle me-2"></i><%= flashMessage %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <!-- Upload Button (if user can upload) -->
      <% if (locals.isLoggedIn && locals.canUpload) { %>
        <div class="text-end mb-4">
          <button class="btn btn-danger" id="toggleUploadForm">
            <i class="fas fa-cloud-upload-alt me-2"></i>Upload New Image
          </button>
        </div>
        
        <!-- Direct Upload Form (Hidden by default) -->
        <div id="directUploadForm" class="card mb-4 bg-dark shadow" style="display: none;">
          <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Upload New Image</h5>
          </div>
          <div class="card-body">
            <form action="/gallery/upload" method="POST" enctype="multipart/form-data" id="uploadImageForm">
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="image" class="form-label text-light">Image File</label>
                    <input type="file" class="form-control" id="image" name="image" accept="image/jpeg,image/png,image/gif,image/webp" required>
                    <div class="form-text text-light-50">Max file size: 5MB. Supported formats: JPEG, PNG, GIF, WebP</div>
                  </div>
                  
                  <div class="mb-3">
                    <label for="title" class="form-label text-light">Title</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                  </div>
                  
                  <div class="mb-3">
                    <label for="description" class="form-label text-light">Description (Optional)</label>
                    <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                  </div>
                </div>
                
                <div class="col-md-6">
                  <div class="mb-3">
                    <label for="category" class="form-label text-light">Category</label>
                    <select class="form-select" id="category" name="category" required>
                      <option value="course">Course</option>
                      <option value="event">Event</option>
                      <option value="facility">Facility</option>
                      <option value="other">Other</option>
                    </select>
                  </div>
                  
                  <div class="mb-3" id="courseField">
                    <label for="courseId" class="form-label text-light">Related Course (Optional)</label>
                    <select class="form-select" id="courseId" name="courseId">
                      <option value="">Select a course</option>
                      <% if (locals.courses && courses.length > 0) { %>
                        <% courses.forEach(course => { %>
                          <option value="<%= course._id %>"><%= course.name %></option>
                        <% }); %>
                      <% } %>
                    </select>
                  </div>
                  
                  <div class="mb-3" id="imagePreviewContainer" style="display: none;">
                    <label class="form-label text-light">Image Preview</label>
                    <div class="image-preview-box p-2 border rounded">
                      <img id="imagePreview" src="" alt="Preview" class="img-fluid rounded">
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="text-end mt-3">
                <button type="button" class="btn btn-secondary me-2" id="cancelUpload">Cancel</button>
                <button type="submit" class="btn btn-danger">Upload Image</button>
              </div>
            </form>
          </div>
        </div>
      <% } %>
      
      <!-- Gallery Grid -->
      <div class="gallery">
        <% if (images && images.length > 0) { %>
          <% images.forEach((image, index) => { %>
            <div class="gallery-item <%= index % 7 === 0 ? 'gallery-item-large' : (index % 5 === 0 ? 'gallery-item-tall' : (index % 3 === 0 ? 'gallery-item-wide' : '')) %>">
              <img src="<%= image.imageUrl %>" alt="<%= image.title %>" class="gallery-image">
              <div class="gallery-overlay">
                <div class="gallery-info">
                  <h5><%= image.title %></h5>
                  <% if (image.description) { %>
                    <p><%= image.description %></p>
                  <% } %>
                  <% if (image.course && image.course.name) { %>
                    <p class="badge bg-info">Course: <%= image.course.name %></p>
                  <% } %>
                  <small class="text-light">Uploaded by: <%= image.uploadedBy.name %></small>
                  
                  <!-- Delete Button (for owner or admin) -->
                  <% if (locals.isLoggedIn && (locals.userRole === 'admin' || locals.userId === image.uploadedBy._id.toString())) { %>
                    <div class="mt-2">
                      <a href="/gallery/delete/<%= image._id %>" class="btn btn-sm btn-danger delete-image" data-image-id="<%= image._id %>">
                        <i class="fas fa-trash-alt me-1"></i>Delete
                      </a>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <div class="alert alert-info w-100 text-center">
            <i class="fas fa-info-circle me-2"></i>No images in the gallery yet. Be the first to upload!
          </div>
        <% } %>
      </div>
    </div>
  </section>
</main>

<!-- Gallery Styles -->
<style>
  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    grid-auto-rows: 250px;
    grid-gap: 15px;
  }
  
  .gallery-item {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }
  
  .gallery-item:hover {
    transform: scale(1.02);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
  }
  
  .gallery-item-large {
    grid-column: span 2;
    grid-row: span 2;
  }
  
  .gallery-item-wide {
    grid-column: span 2;
  }
  
  .gallery-item-tall {
    grid-row: span 2;
  }
  
  .gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .gallery-item:hover .gallery-image {
    transform: scale(1.1);
  }
  
  .gallery-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 20px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .gallery-item:hover .gallery-overlay {
    opacity: 1;
  }
  
  .gallery-info h5 {
    margin-bottom: 10px;
    font-weight: 600;
  }
  
  @media (max-width: 768px) {
    .gallery {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      grid-auto-rows: 200px;
    }
    
    .gallery-item-large, .gallery-item-wide, .gallery-item-tall {
      grid-column: span 1;
      grid-row: span 1;
    }
  }
  
  .image-preview-box {
    border: 2px solid #dc3545;
    background: rgba(0, 0, 0, 0.2);
    height: 180px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .image-preview-box img {
    max-height: 160px;
    object-fit: contain;
  }
  
  #directUploadForm {
    transition: all 0.3s ease;
  }
</style>

<!-- Simple Gallery Script -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Toggle upload form
    const toggleBtn = document.getElementById('toggleUploadForm');
    const uploadForm = document.getElementById('directUploadForm');
    const cancelBtn = document.getElementById('cancelUpload');
    
    if (toggleBtn && uploadForm) {
      toggleBtn.addEventListener('click', function() {
        uploadForm.style.display = uploadForm.style.display === 'none' ? 'block' : 'none';
        if (uploadForm.style.display === 'block') {
          uploadForm.scrollIntoView({ behavior: 'smooth' });
        }
      });
    }
    
    if (cancelBtn && uploadForm) {
      cancelBtn.addEventListener('click', function() {
        uploadForm.style.display = 'none';
        document.getElementById('uploadImageForm').reset();
        document.getElementById('imagePreviewContainer').style.display = 'none';
      });
    }
    
    // Image preview
    const fileInput = document.getElementById('image');
    const previewContainer = document.getElementById('imagePreviewContainer');
    const previewImg = document.getElementById('imagePreview');
    
    if (fileInput && previewContainer && previewImg) {
      fileInput.addEventListener('change', function() {
        if (this.files && this.files[0]) {
          const reader = new FileReader();
          
          reader.onload = function(e) {
            previewImg.src = e.target.result;
            previewContainer.style.display = 'block';
          };
          
          reader.readAsDataURL(this.files[0]);
        } else {
          previewContainer.style.display = 'none';
        }
      });
    }
    
    // Category change
    const categorySelect = document.getElementById('category');
    const courseField = document.getElementById('courseField');
    
    if (categorySelect && courseField) {
      categorySelect.addEventListener('change', function() {
        courseField.style.display = this.value === 'course' ? 'block' : 'none';
        if (this.value !== 'course') {
          document.getElementById('courseId').value = '';
        }
      });
      
      // Initialize
      courseField.style.display = categorySelect.value === 'course' ? 'block' : 'none';
    }
    
    // Delete confirmation
    const deleteButtons = document.querySelectorAll('.delete-image');
    deleteButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        if (!confirm('Are you sure you want to delete this image?')) {
          e.preventDefault();
        }
      });
    });
  });
</script>

<%- include('../partials/footer') %>

